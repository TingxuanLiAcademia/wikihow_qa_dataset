removeChild(g)},!0))};if(this.videoPlayer&&!this.summaryVideo&&!this.watchVideo){var c=this;this.videoPlayer.addEventListener("click",function(){c.toggle()})}this.controls&&y(this)}var e=[],p={},l=!1,u=!1,m=!1,h=null,v=null;"IntersectionObserver"in window&&(h=new IntersectionObserver(function(a,c){a.forEach(function(a){if(a.isIntersecting){var b=p[a.target.id];0==b.isLoaded&&b.load();h.unobserve(a.target)}})},{rootMargin:"0px 0px 100% 0px"}),v=new IntersectionObserver(function(a,c){a.forEach(function(a){var b=p[a.target.id];0!=b.isLoaded&&(a.isIntersecting&&!b.isPlaying&&b.play(),!a.isIntersecting&&b.isPlaying&&b.pause())})},{rootMargin:"0px",threshold:.75}));return{start:function(){WH.shared&&(l=WH.shared.autoPlayVideo,WH.shared.addResizeFunction(k));"undefined"==typeof document.createElement("video").canPlayType&&(u=!0);0<window.location.href.indexOf("gif=1")&&(l=!1);WH.shared&&null==h&&window.addEventListener("scroll",WH.shared.throttle(k,100));document.addEventListener(
